{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "ES6",
        "target": "ES6",
        "baseUrl": "./",
        "jsx": "react",
        "strictNullChecks": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true
    },
    "include": [
        "demo/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
